<%= form_for @drank do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :abv, "Alcohol by Volume. example: 5.5" %>
  <%= f.text_field :abv %>

  <%= f.button %>
<% end %>
